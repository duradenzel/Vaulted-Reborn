

<div class="character-container">
    <div class="character-content">
        <h2>Characters</h2>
        <ul style="list-style: none">
            @foreach (var character in @Model)
            {
                <li >
                    <div class="clist-card" data-character-id="@character.Id" onclick="location.href='@Url.Action("Index", "Character", new { id = character.Id })'">
                        <div class="clist-avatar">R</div>
                        <div class="clist-info">
                            <div class="row">@character.Name</div>
                            <div class="row">@character.Class @character.Level</div>
                        </div>
                    </div>
                </li>
            }
           
        </ul>
    </div>
</div>


